
<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium) %>

        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>Title:</strong></td>
                <td><%= @movie.title %></td>
              </tr>
              
              <tr>
                <td><strong>Movie length:</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Year:</strong></td>
                <td><%= @movie.year %></td>
              </tr>
              <tr>
                <td><strong>Imdb Rating:</strong></td>
                <td><%= @movie.IMDB_rating %></td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Write a Review", new_movie_review_path(@movie) %>
        </div>
      </div>
      <div class="col-md-7 col-md-offset-1">
        <h1 class="review_title"><%= @movie.title %></h1>
        <p><%= @movie.description %></p>

        <% if @reviews.blank? %>
          <h3>No reviews, Add one !</h3>
          <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
        <% else %>
          <% @reviews.each do |review| %>
            <div class="reviews">
             <tr> 
             <td><strong>Rating And Review:</strong></td>
             <td><p> <%= review.rating %> </p> </td>
             </tr>

             <td> <p><%= review.comment %></p> </td>
              <td><p><%= review.user.email %></p> </td>
              </tr>

            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Destroy', movies_path(@movie), 
        method: :delete,
        data: {confirm: 'Confirm movie deletion'} %> |
<%= link_to 'Back', movies_path %>